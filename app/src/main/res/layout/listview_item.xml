<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date"
        android:id="@+id/loc_date"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAlignment="textStart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Station"
        android:id="@+id/loc_station"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="textEnd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="odometer"
        android:id="@+id/loc_odometer"
        android:layout_below="@+id/loc_date"
        android:layout_alignParentStart="true"
        android:textAlignment="textStart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="grade"
        android:id="@+id/loc_grade"
        android:layout_below="@+id/loc_odometer"
        android:layout_alignParentStart="true"
        android:textAlignment="textStart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="amount"
        android:id="@+id/loc_amount"
        android:layout_below="@+id/loc_station"
        android:layout_alignParentEnd="true"
        android:textAlignment="textEnd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="unit"
        android:id="@+id/loc_unit"
        android:layout_below="@+id/loc_amount"
        android:layout_alignParentEnd="true"
        android:textAlignment="textEnd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cost"
        android:id="@+id/loc_cost"
        android:layout_alignBottom="@+id/loc_grade"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

</RelativeLayout>