<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cmput301.almokdad_fueltrack.new_log"
    tools:showIn="@layout/activity_new_log"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/head_date"
        android:id="@+id/head_date"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/entry_date"
        android:clickable="true"
        android:typeface="sans"
        android:editable="false"
        android:layout_marginStart="150dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/head_station"
        android:id="@+id/head_station"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_below="@+id/head_date"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/entry_station"
        android:typeface="sans"
        android:layout_below="@+id/entry_date"
        android:layout_marginStart="150dp"
        android:layout_marginTop="10dp"
        android:inputType="text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Odometer"
        android:id="@+id/head_odometer"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_below="@+id/head_station"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/entry_odometer"
        android:typeface="sans"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/entry_station"
        android:layout_marginStart="150dp"
        android:hint="Km"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fuel Grade"
        android:id="@+id/head_grade"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_below="@+id/head_odometer"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/entry_grade"
        android:typeface="sans"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/entry_odometer"
        android:layout_marginStart="150dp"
        android:inputType="text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fuel Amount"
        android:id="@+id/head_amount"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_below="@+id/head_grade"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/entry_amount"
        android:typeface="sans"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/entry_grade"
        android:layout_marginStart="150dp"
        android:hint="L"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fuel Unit Cost"
        android:id="@+id/head_unit"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_below="@+id/head_amount"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/entry_unit"
        android:typeface="sans"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/entry_amount"
        android:layout_marginStart="150dp"
        android:hint="cents/L"
        android:inputType="numberDecimal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fuel Cost"
        android:id="@+id/head_cost"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_below="@+id/head_unit"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/entry_cost"
        android:typeface="sans"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/entry_unit"
        android:layout_marginStart="150dp"
        android:editable="false"
        android:inputType="numberDecimal"/>

</RelativeLayout>